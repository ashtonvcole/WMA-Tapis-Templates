{
    "id":"kalpana-ashtonc",
    "owner": "${apiUserId}",
    "version": "v0.0.24",
    "containerImage":"docker://docker.io/ashtonvcole/kalpana:v0.0.24",
    "description": "Kalpana converts several kinds of ADCIRC outputs into vector formats.",
    "runtime": "SINGULARITY",
    "runtimeOptions": [
        "SINGULARITY_RUN"
    ],
    "jobAttributes": {
        "archiveOnAppError": true,
        "archiveSystemId": "designsafe.storage.default",
        "archiveSystemDir": "${JobOwner}/tapis-jobs-archive/${JobCreateDate}/${JobName}-${JobUUID}",
        "description": "Job running Kalpana.",
        "execSystemId": "wma-exec-01",
        "fileInputs": [
            {
                "name": "Python Script",
                "description": "Python script which requires Kalpana.",
                "inputMode": "REQUIRED",
                "autoMountLocal": true,
                "sourceUrl": null,
                "targetPath": "script.py"
            },
            {
                "name": "ADCIRC File",
                "description": "ADCIRC output file which requires Kalpana. Maps to $_tapisExecSystemInputDir/input.",
                "inputMode": "REQUIRED",
                "autoMountLocal": true,
                "sourceUrl": null,
                "targetPath": "input"
            }
        ],
        "parameterSet": {
            "appArgs": [
                {
                    "name": "Python Script Name",
                    "description": "Name of Python script to run. This is \\$_tapisExecSystemInputDir/script.py by default. From the perspective of the Singularity container.\nFlag: N/A\nValue: file path",
                    "inputMode": "FIXED",
                    "arg": "\\$_tapisExecSystemInputDir/script.py"
                }
            ],
            "archiveFilter": {
                "excludes": []
            },
            "containerArgs": [
                {
                    "name": "PWD",
                    "description": "Set present working directory to output directory. NOTE: Singularity does not honor Docker WORKDIR commands. NOTE 2: By default, Singularity binds the outside filesystem to the container's home directory.\nFlag: --pwd\nValue: file path",
                    "inputMode": "FIXED",
                    "arg": "--pwd \\${ExecSystemOutputDir}"
                },
                {
                    "name": "Writable",
                    "description": "Allow for temporary files to be written.",
                    "inputMode": "FIXED",
                    "arg": "--writable-tmpfs"
                }
            ]
        }
    },
    "jobType": "FORK",
    "notes": {
        "category": "Visualization",
        "helpUrl": "https://github.com/ccht-ncsu/Kalpana",
        "isInteractive": false,
        "label": "Kalpana"
    },
    "strictFileInputs": true,
    "tags": [
        "portalName: DesignSafe"
    ]
}


